@import url(fonts.css)

html
	width 100%
	height 100%
body
	width 100%
	height 100%
	font-size 18px
  

p
	margin 0
	padding 0
	color white

h1
	margin 0
	padding 0
h3
	margin 0
	padding 0

.index	
	background primary_color
	box-shadow level3
	font-family 'Roboto'
